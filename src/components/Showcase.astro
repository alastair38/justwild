---
export interface Props {
  heading?: string
  text?: string
}

const {
  heading = 'Showcase',
  text = 'Lorem, ipsum dolor sit amet consectetur adipisicing elit. Modi odio tota',
} = Astro.props as Props
---

<section class="w-3/4 mx-auto bg-white rounded-md my-6 p-6 shadow-md space-y-6">
  <h1 class="text-4xl font-black">{heading}</h1>
  <p>
    {text}
  </p>
</section>
