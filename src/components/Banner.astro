---
import {Image, Picture} from '@astrojs/image/components'
import Banner from '../images/banner.png'
export interface Props {
  heading?: string
  text?: string
  showImage?: boolean
}

const {
  heading = 'Just Wild',
  text = 'Photos by Grace Cox',
  showImage = true,
} = Astro.props as Props
---

<section>
  {
    showImage && (
      <Image
        id="banner"
        class="object-cover"
        src={Banner}
        width={1600}
        height={700}
        alt="Just Wild photography"
        loading="eager"
      />
    )
  }

  <h1 class="sr-only">{heading}</h1>
  <p class="sr-only">
    {text}
  </p>
</section>
